<div class="event-header">
  <div class=event-name>
    <%= @department.name %>
  </div>
  <div class="event-destroy">
    <%= link_to '予定表を削除する', department_path(@department.id), method: :delete, class:"button" %>
  </div>
</div>

<div class="event-main">
  <div class="plan-create">
    <%= link_to '予定を追加', new_department_event_path, class:"btn btn-primary btn-lg active" %>
  </div>
  <%# カレンダー%>
  <div class="tab-wrap">
    <ul>
      <li class="tab-btn show">月</li>
      <li class="tab-btn">週</li>
    </ul>
    <%# 月カレンダー%>
    <div class="calendar tab-contents show">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div class="event-display">
            <%=link_to event.title, department_event_path(@department,event), class:"event-title"%>
            <span><%= event.start_time.strftime("%H:%M")%></span>
          </div>
        <% end %>
      <% end %>
    </div>
    <%# /月カレンダー%>
    <%# 週カレンダー%>
    <div class="calendar tab-contents">
      <%= week_calendar(events: @events) do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div class="event-display">
            <%=link_to event.title, department_event_path(@department,event), class:"event-title"%>
            <span><%= event.start_time.strftime("%H:%M")%></span>
          </div>
        <% end %>
      <% end %>
    </div>
    <%# /週カレンダー%>
  </div>
  <%# /カレンダー%>

  <%# コメント%>
  <div class="comments">
    <%= render partial: 'comment', collection: @comments %>
  </div>
  <%# /コメント%>
</div>

<%= form_with model: [@department, @comment], class: "form", local: true do |f| %>
  <div class="form-comment">
    <%= f.text_field :text, placeholder: "type a message", class: "form-input" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit '送信', class: "form-submit" %>
<% end %>